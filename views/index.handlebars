<div class="container">
    <div class="columns">
        <!-- BURGERS TO BE EATEN -->
        <div class="column">
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div class="card">
                            <div class="card-content">
                                <div class="content">
                                    <form action='/burger/{{this.id}}?_method=PUT' method='POST'>
                                        {{this.id}}. {{this.burger_name}}
                                        <div class="control is-pulled-right">
                                            <button class="button is-danger">Devour It!</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <!-- DEVOURED BURGERS -->
        <div class="column">
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class="card">
                            <div class="card-content">
                                <div class="content level">
                                   <p style='text-decoration: line-through'>{{this.burger_name}}</p>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<br>

<!-- ADD NEW BURGER -->
<div class="container">
    <div class="columns">
        <div class="column"></div>
        <div class="column">
            <form action="/burger/new" method='POST'>
                <div class="field">             
                    <div class="control level">
                        <input class="input" type="text" name='burger_name' placeholder="Burger Name">
                        <span class='has-text-center'><button class="button is-success">Submit</button></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="column"></div>
    </div>
</div>